<div>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <h1>Nova senha</h1>
          <div>
            <%= f.password_field :password, class: "form-control", placeholder: "Nova senha" %>
          </div>
          <div>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirme a nova senha" %>
          </div>
          <div>
            <%= f.submit "Alterar minha senha", class: "btn btn-default", style: "float: none; margin-inline: 0;" %>
          </div>
          <div class="clearfix"></div>
          <div class="separator"></div>
        <% end %>
      </section>
    </div>
  </div>
</div>
