<div>
  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h1>Cadastrar-se</h1>
          <div>
            <%= f.email_field :email, class: "form-control", placeholder: "fulanodasilva@email.com", autofocus: true %>
          </div>
          <div>
            <%= f.password_field :password, class: "form-control", placeholder: "Senha" %>
          </div>
          <div>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirme a senha" %>
          </div>
          <div>
            <%= f.submit "Cadastrar", class: "btn btn-default submit", style: "float: none; margin: 0; width: 100%" %>
          </div>
          <div class="clearfix"></div>
          <div class="separator"></div>
        <% end %>
      </section>
    </div>
  </div>
</div>
