<div class="jumbotron">
  <h2><%= @subject.description %></h2>
</div>

<%= render partial: 'site/shared/questions' %>

<% if user_signed_in? %>
  <%# Pagination %>
  <div class="row">
    <div class="col-lg-12 text-center">
      <%= paginate @questions %>
    </div> <!-- /.col-lg-12 -->
  </div> <!-- /.row -->
<% else %>
  <div class="alert alert-warning" role="alert">
    Efetue login para poder navegar em todas as perguntas...
  </div>
<% end %>
