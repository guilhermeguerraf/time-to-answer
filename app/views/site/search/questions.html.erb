
<% if @questions.total_count.nonzero? %>
  <p class="lead">
    <small>
      <%= "#{ @questions.total_count } #{ @questions.total_count != 1 ? "resultados" : "resultado" } para: " %>
      <b><%= params[:term] %></b>
    </small>
  </p>
<% end %>


<%= render partial: 'site/shared/questions' %>

<%# Pagination %>
<div class="row">
  <div class="col-lg-12 text-center">
    <%= paginate @questions %>
  </div> <!-- /.col-lg-12 -->
</div> <!-- /.row -->