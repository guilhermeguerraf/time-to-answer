<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Login Administrativo</h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), role: 'form') do |f| %>
          <fieldset>
            <div class="form-group">
              <%= f.email_field :email, class: "form-control", placeholder: "E-mail", autofocus: true, autocomplete: "email" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, class: "form-control", placeholder: "Senha" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="checkbox">
                <%= f.label :remember_me do %>
                  <%= f.check_box :remember_me %> Remember me
                <% end %>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Login", class: "btn btn-lg btn-success btn-block" %>
            </div>
          </fieldset>
          <hr>
          <%= render "admins/shared/links" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

