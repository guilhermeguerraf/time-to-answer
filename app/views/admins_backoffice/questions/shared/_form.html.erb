<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= action_message %></h1>
  </div> <!-- /.col-lg-12 -->
</div> <!-- /.row -->

<% if @question.errors.any? %>
  <div class="row">
    <div class="col-lg-12">
      <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        Não foi possível salvar as alterações.
        <ul>
          <% @question.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div> <!-- /.col-lg-12 -->
  </div> <!-- /.row -->
<% end %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
          Formulário
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <%= form_with model: [:admins_backoffice, @question], local: true do |form| %>
              <div class="form-group">
                <%= form.label :description %>
                <%= form.text_area :description, class: 'form-control', placeholder: t('placeholders.question.description') %>
              </div>
              <div class="form-group">
                <%= form.label :subject %>
                <%= form.collection_select :subject_id, @subjects, :id, :description, { prompt: t('placeholders.question.subject') }, { class: 'form-control' } %>
              </div>

              <div class="form-group">
                <h3>Respostas</h3>

                <div id="answers">
                  <%= form.fields_for :answers do |answer| %>
                    <%= render partial: 'answer_fields', locals: { f: answer } %>
                  <% end %>

                  <div class="links">
                    <%= link_to_add_association 'Adicionar alternativa', form, :answers %>
                  </div>
                </div>
              </div>

              <%= form.submit t('buttons.save'), class: 'btn btn-primary' %>
              <%= link_to admins_backoffice_questions_path, class: 'btn btn-default' do %>
                <%= t('buttons.back') %>
              <% end %>
            <% end %>
          </div> <!-- /.col-lg-6 (nested) -->
        </div> <!-- /.row (nested) -->
      </div> <!-- /.panel-body -->
    </div> <!-- /.panel -->
  </div> <!-- /.col-lg-12 -->
</div> <!-- /.row -->