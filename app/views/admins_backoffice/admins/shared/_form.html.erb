<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= action_message %></h1>
  </div> <!-- /.col-lg-12 -->
</div> <!-- /.row -->

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
          Formul√°rio
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6">
            <%= form_with model: [:admins_backoffice, @admin], local: true do |form| %>
              <div class="form-group">
                <%= form.label :email %>
                <%= form.text_field :email, type: 'email', class: 'form-control', placeholder: t('placeholders.devise.email') %>
                <p class="help-block">
                  <% @admin.errors.full_messages_for(:email).each do |message| %>
                    <strong class="text-danger">
                      <i class="fa fa-warning"></i> <%= message %>
                    </strong>
                  <% end %>
                </p>
              </div>
              <div class="form-group">
                <%= form.label :password %>
                <%= form.password_field :password, class: 'form-control', placeholder: t('placeholders.devise.password')  %>
                <p class="help-block">
                  <% @admin.errors.full_messages_for(:password).each do |message| %>
                    <strong class="text-danger">
                      <i class="fa fa-warning"></i> <%= message %>
                    </strong>
                  <% end %>
                </p>
              </div>
              <div class="form-group">
                <%= form.label :password_confirmation %>
                <%= form.password_field :password_confirmation, class: 'form-control', placeholder: t('placeholders.devise.password_confirmation')  %>
                <p class="help-block">
                  <% @admin.errors.full_messages_for(:password_confirmation).each do |message| %>
                    <strong class="text-danger">
                      <i class="fa fa-warning"></i> <%= message %>
                    </strong>
                  <% end %>
                </p>
              </div>
              <%= form.submit t('buttons.save'), class: 'btn btn-primary' %>
              <%= link_to admins_backoffice_admins_path, class: 'btn btn-default' do %>
                <%= t('buttons.back') %>
              <% end %>
            <% end %>
          </div> <!-- /.col-lg-6 (nested) -->
        </div> <!-- /.row (nested) -->
      </div> <!-- /.panel-body -->
    </div> <!-- /.panel -->
  </div> <!-- /.col-lg-12 -->
</div> <!-- /.row -->