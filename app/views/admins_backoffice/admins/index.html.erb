<%# Page title %>
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= t('messages.listing', model: @admins.model_name.human(count: 2)) %>
    </h1>
  </div> <!-- /.col-lg-12 -->
</div> <!-- /.row -->

<div class="row" style="margin-bottom: 15px;">
  <div class="col-lg-12">
    <%= link_to new_admins_backoffice_admin_path, class: "btn btn-success", title: t('buttons.new') do %>
      <i class="fa fa-plus"></i> Novo administrador
    <% end %>
  </div>
</div>

<%# Table %>
<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th><%= translate_attribute(@admins, :id) %></th>
            <th><%= translate_attribute(@admins, :email) %></th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @admins.each do |admin| %>
            <tr>
              <td><%= admin.id %></td>
              <td><%= admin.email %></td>
              <th>
                <%= link_to edit_admins_backoffice_admin_path(admin), class: "btn btn-primary btn-circle", title: t('buttons.edit') do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to admins_backoffice_admin_path(admin), method: :delete, data: { confirm: t('messages.confirm_with') }, class: "btn btn-danger btn-circle", title: t('buttons.destroy') do %>
                  <i class="fa fa-trash-o"></i>
                <% end %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div> <!-- /.table-responsive -->
  </div> <!-- /.col-lg-12 -->
</div> <!-- /.row -->

<%# Pagination %>
<div class="row">
  <div class="col-lg-12 text-center">
    <%= paginate @admins %>
  </div> <!-- /.col-lg-12 -->
</div> <!-- /.row -->
