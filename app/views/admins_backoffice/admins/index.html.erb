<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Listando administradores</h1>
      
      <%= link_to new_admins_backoffice_admin_path, class: "btn btn-success" do %>
        <i class="fa fa-plus"></i> Novo administrador
      <% end %>
    </div>

  </div> <!-- /.col-lg-12 -->
</div> <!-- /.row -->
<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Email</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @admins.each do |admin| %>
            <tr>
              <td><%= admin.id %></td>
              <td><%= admin.email %></td>
              <th>
                <%= link_to edit_admins_backoffice_admin_path(admin), class: "btn btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to admins_backoffice_admin_path(admin), method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, class: "btn btn-danger btn-circle" do %>
                  <i class="fa fa-trash-o"></i>
                <% end %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div> <!-- /.table-responsive -->
  </div> <!-- /.col-lg-12 -->
</div> <!-- /.row -->




