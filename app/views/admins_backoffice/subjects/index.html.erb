<%# Page title %>
<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h1>Listando assuntos</h1>
      
      <%= link_to new_admins_backoffice_subject_path, class: "btn btn-success" do %>
        <i class="fa fa-plus"></i> Novo assunto
      <% end %>
    </div>

  </div> <!-- /.col-lg-12 -->
</div> <!-- /.row -->

<%# Table %>
<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Descrição</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @subjects.each do |subject| %>
            <tr>
              <td><%= subject.id %></td>
              <td><%= subject.description %></td>
              <th>
                <%= link_to edit_admins_backoffice_subject_path(subject), class: "btn btn-primary btn-circle" do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to admins_backoffice_subject_path(subject), method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, class: "btn btn-danger btn-circle" do %>
                  <i class="fa fa-trash-o"></i>
                <% end %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div> <!-- /.table-responsive -->
  </div> <!-- /.col-lg-12 -->
</div> <!-- /.row -->

<%# Pagination %>
<div class="row">
  <div class="col-lg-12 text-center">
    <%= paginate @subjects %>
  </div> <!-- /.col-lg-12 -->
</div> <!-- /.row -->
