<%# Page title %>
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= t('messages.listing', model: @subjects.model_name.human(count: 2)) %>
    </h1>
  </div> <!-- /.col-lg-12 -->
</div> <!-- /.row -->

<div class="row" style="margin-bottom: 15px;">
  <div class="col-lg-12">
    <%= link_to new_admins_backoffice_subject_path, class: "btn btn-success" do %>
      <i class="fa fa-plus"></i> Novo assunto
    <% end %>

    <%= link_to admins_backoffice_subjects_path(format: :pdf), target: :_blank, class: 'btn btn-default' do %>
      <i class="fa fa-file-pdf-o"></i> <%= t('buttons.pdf') %>
    <% end %>
  </div>
</div>

<%# Table %>
<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th><%= translate_attribute(@subjects, :id) %></th>
            <th><%= translate_attribute(@subjects, :description) %></th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @subjects.each do |subject| %>
            <tr>
              <td><%= subject.id %></td>
              <td><%= subject.description %></td>
              <th>
                <%= link_to edit_admins_backoffice_subject_path(subject), class: "btn btn-primary btn-circle", title: t('buttons.edit') do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to admins_backoffice_subject_path(subject), method: :delete, data: { confirm: t('messages.confirm_with') }, class: "btn btn-danger btn-circle", title: t('buttons.destroy') do %>
                  <i class="fa fa-trash-o"></i>
                <% end %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div> <!-- /.table-responsive -->
  </div> <!-- /.col-lg-12 -->
</div> <!-- /.row -->

<%# Pagination %>
<div class="row">
  <div class="col-lg-12 text-center">
    <%= paginate @subjects %>
  </div> <!-- /.col-lg-12 -->
</div> <!-- /.row -->
